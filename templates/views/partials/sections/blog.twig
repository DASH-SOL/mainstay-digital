<section class="blog-section py-8 lg:py-16">
        <div class="flex items-center justify-between mb-12 lg:mb-16">
            <div class="flex items-center">
                <div class="mr-1 md:mr-4 flex-shrink-0">
                    <svg width="33" height="54" viewBox="0 0 33 54" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-mainstay-green"> 
                        <path d="M0.00292969 53.428L0.259933 53.558H5.10093L32.1379 0.0939941H26.9749L0.00292969 53.428Z" fill="currentColor"/> 
                    </svg>
                </div>
                <h2 class="section-heading text-black">
                    {% if blog.heading %}
                        {{ blog.heading }}
                    {% else %}
                        Learn more
                    {% endif %}
                </h2>
            </div>
            
            <div class="flex items-center">
                <a href="{{ blog.insights_link }}" class="insights-link inline-flex items-center text-black hover:text-mainstay-green transition-colors">
                    <span class="mr-2">Insights</span>
                    <svg width="15" height="8" viewBox="0 0 15 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M14.0751 3.83902L10.3664 7.54773V4.47431H0.304871V3.20374H10.3664V0.13032L14.0751 3.83902Z" fill="rgb(14 221 122 / var(--tw-text-opacity, 1))"/>
                    </svg>
                </a>
            </div>
        </div>

        {% if blog.posts %}
            <div class="blog-posts-list space-y-8 lg:space-y-12">
                {% for post in blog.posts %}
                    <article class="blog-post-item">
                        <div class="lg:grid lg:gap-8 lg:items-center" style="grid-template-columns: 1fr 2fr;">
                            <div class="mb-6 lg:mb-0">
                                {% if post.thumbnail %}
                                    <div class="blog-post-image">
                                        <a href="{{ post.link }}" class="block transition-transform duration-300 hover:scale-105">
                                            <img src="{{ post.thumbnail.src('medium') }}" 
                                                 alt="{{ post.thumbnail.alt }}"
                                                 class="w-full h-48 lg:h-56 object-cover">
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <div class="blog-post-content-wrapper">
                                <div class="blog-post-content border-t border-b border-mainstay-green py-8 lg:py-10 lg:pl-8">
                                    {% if post.terms('category') %}
                                        {% set category = post.terms('category')[0] %}
                                        <div class="blog-post-category mb-4">
                                            <span class="blog-category-tag uppercase">{{ category.name }}</span>
                                        </div>
                                    {% endif %}
                                    
                                    <h3 class="blog-post-title mb-4 lg:mb-6">
                                        <a href="{{ post.link }}" class="text-black hover:text-mainstay-green transition-colors">
                                            {{ post.title }}
                                        </a>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-12">
                <p class="text-gray-600">
                    No blog posts found. 
                    <a href="/wp-admin/post-new.php" class="text-mainstay-green hover:underline">
                        Create your first post
                    </a>.
                </p>
            </div>
        {% endif %}
</section>
