<section class="hero-section bg-white py-12 lg:py-32 overflow-hidden relative">
    <div class="relative">
        <div class="absolute bottom-4 right-0 block md:hidden z-0 hero-graphic-mobile">
            {% if hero.decorative_graphic_mobile %}
                <div class="w-80 h-80">
                    <img src="{{ TimberImage(hero.decorative_graphic_mobile).src('large') }}" 
                         alt="{{ TimberImage(hero.decorative_graphic_mobile).alt }}"
                         class="w-full h-full object-contain hero-graphic-img">
                </div>
            {% endif %}
        </div>

        <div class="absolute top-1/2 right-0 transform -translate-y-1/2 hidden md:block z-0 hero-graphic-desktop">
            {% if hero.decorative_graphic_desktop %}
                <div class="w-[500px] h-[500px]">
                    <img src="{{ TimberImage(hero.decorative_graphic_desktop).src('large') }}" 
                         alt="{{ TimberImage(hero.decorative_graphic_desktop).alt }}"
                         class="w-full h-full object-contain hero-graphic-img">
                </div>
            {% endif %}
        </div>

        <div class="relative z-10">
            <div class="max-w-3xl">
                {% if hero.headline %}
                    <h1 class="text-black mb-10 lg:mb-16">
                        {{ hero.headline }}
                    </h1>
                {% endif %}
                
                {% if hero.services %}
                    <div class="space-y-1 lg:space-y-2 mb-12 lg:mb-20">
                        {% for service in hero.services %}
                            <div class="flex items-center">
                                <span class="text-mainstay-green text-2xl lg:text-3xl font-light mr-4 lg:mr-5">+</span>
                                <span class="service-text text-black">
                                    {{ service.service_text }}
                                </span>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
                
                {% if hero.button_text and hero.button_url %}
                    <a href="{{ hero.button_url }}" class="btn-mainstay inline-block">
                        {{ hero.button_text }}
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</section>