<section class="experience-section py-16 lg:py-16">
    <div class="experience-bg mx-4 lg:mx-8 px-6 lg:px-12 py-12 lg:py-16 bg-white" style="border: 1px solid rgba(14, 221, 122, 1); max-width: 1380px; margin-left: auto; margin-right: auto;">
        
        <!-- Main Heading Container -->
        {% if post.meta('experience_heading') %}
            <div class="flex items-center mb-12 lg:mb-16">
                <div class="mr-4 flex-shrink-0">
                    <svg width="33" height="54" viewBox="0 0 33 54" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-mainstay-green"> 
                        <path d="M0.00292969 53.428L0.259933 53.558H5.10093L32.1379 0.0939941H26.9749L0.00292969 53.428Z" fill="currentColor"/> 
                    </svg>
                </div>
                <h2 class="section-heading text-black">
                    {{ post.meta('experience_heading') }}
                </h2>
            </div>
        {% endif %}

        <!-- Logo Grid -->
        {% if post.meta('experience_logos') %}
            <div class="experience-logos-grid grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 lg:gap-12 items-center justify-items-center">
                {% for logo in post.meta('experience_logos') %}
                    {% if logo %}
                        <div class="experience-logo-item flex items-center justify-center p-4">
                            <img src="{{ TimberImage(logo).src('medium') }}" 
                                 alt="{{ TimberImage(logo).alt }}"
                                 class="max-w-full h-auto max-h-16 lg:max-h-20 object-contain filter grayscale hover:filter-none transition-all duration-300">
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        <!-- CTA Button -->
        <div class="text-center mt-12 lg:mt-16">
            <a href="/contact" class="btn-mainstay">
                Get in touch
            </a>
        </div>
    </div>
</section>