{% extends "base.twig" %}

{% block content %}
    {% include 'partials/breadcrumbs.twig' %}
    
    {% if post.meta('hero_section') %}
        {% include 'partials/sections/hero.twig' with {
            'hero': post.meta('hero_section')
        } %}
    {% endif %}

    {% if post.meta('about_section') %}
        {% include 'partials/sections/about.twig' %}
    {% endif %}

    {% if post.meta('capability_section') %}
        {% include 'partials/sections/capability.twig' %}
    {% endif %}

    {% if post.meta('experience_section') %}
        {% include 'partials/sections/experience.twig' %}
    {% endif %}

    {% if post.meta('services_section') %}
        {% include 'partials/sections/services.twig' %}
    {% endif %}

    {% if post.meta('testimonials_section') %}
        {% include 'partials/sections/testimonials.twig' %}
    {% endif %}

    {% if post.meta('team_section') %}
        {% include 'partials/sections/team.twig' %}
    {% endif %}

    {% if post.meta('portfolio_section') %}
        {% include 'partials/sections/portfolio.twig' %}
    {% endif %}

    {% if post.meta('features_section') %}
        {% include 'partials/sections/features.twig' %}
    {% endif %}

    {% if post.meta('process_section') %}
        {% include 'partials/sections/process.twig' %}
    {% endif %}

    {% if post.meta('stats_section') %}
        {% include 'partials/sections/stats.twig' %}
    {% endif %}

    {% if post.meta('pricing_section') %}
        {% include 'partials/sections/pricing.twig' %}
    {% endif %}

    {% if post.meta('faq_section') %}
        {% include 'partials/sections/faq.twig' %}
    {% endif %}

    {% if post.meta('cta_section') %}
        {% include 'partials/sections/cta.twig' %}
    {% endif %}

    {% if post.meta('contact_section') %}
        {% include 'partials/sections/contact.twig' %}
    {% endif %}

    {% if post.meta('blog_section') %}
        {% include 'partials/sections/blog.twig' %}
    {% endif %}

    {% if post.meta('recent_work_section') %}
        {% include 'partials/sections/recent-work.twig' %}
    {% endif %}

    {% if not post.meta('hero_section') and not post.meta('about_section') and not post.meta('capability_section') and not post.meta('experience_section') and not post.meta('services_section') and not post.meta('testimonials_section') and not post.meta('team_section') and not post.meta('portfolio_section') and not post.meta('features_section') and not post.meta('process_section') and not post.meta('stats_section') and not post.meta('pricing_section') and not post.meta('faq_section') and not post.meta('cta_section') and not post.meta('contact_section') and not post.meta('blog_section') %}
        {% if post.content %}
        <div class="site-container pt-16 lg:pt-24">
                <div class="page-header-content">
            <div class="page-category-label">
                <span class="page-label">PAGE</span>
            </div>
            <div class="page-title-container">
                <h1 class="page-title text-black">
                    {{ post.title }}
                </h1>
            </div>
        </div>
        </div>
            <section class="page-content">
                <div>
                    <div class="page-content-section">
                        <div class="page-content-block">
                            <div class="page-content-text text-black">
                                {{ post.content }}
                            </div>
                        </div>
                        
                        {% if post.thumbnail %}
                            <div class="page-image-block">
                                <div class="page-featured-image">
                                    <img src="{{ post.thumbnail.src('large') }}" 
                                         alt="{{ post.thumbnail.alt }}"
                                         class="w-full h-auto">
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </section>
        {% else %}
            <section class="page-content py-16 lg:py-24">
                <div class="site-container">
                    <div class="text-center">
                        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                            Configure your sections using ACF fields to get started.
                        </p>
                        <a href="/wp-admin/post.php?post={{ post.id }}&action=edit" class="btn-mainstay">
                            Edit Page
                        </a>
                    </div>
                </div>
            </section>
        {% endif %}
    {% endif %}
{% endblock %}